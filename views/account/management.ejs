<main>
  <% if (title) { %><h1><%= title %></h1><% } %>

  <%- messages() %>

  <div class="container">
    <div class="registration-container management">
      <h2>Welcome <%= accountData.account_firstname %></h2>

      <p>
        <a href="/account/update/<%= accountData.account_id %>" class="submit-button">
          Edit Account Information
        </a>
      </p>

      <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
        <hr>
        <h3>Inventory Management</h3>
        <p>
          <a href="/inv/" class="submit-button">Manage Inventory</a>
        </p>
      <% } %>
    </div>
  </div>

  <section class="customer-reviews">
    <h2>My Reviews</h2>
    <%- myReviews %>
  </section>
</main>